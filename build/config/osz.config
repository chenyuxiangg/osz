# Kernel base
OSZ_CFG_STARTUP=y
OSZ_CFG_STRUCT=y
OSZ_CFG_COMM=y
OSZ_CFG_MEM=y
OSZ_CFG_DEBUG=y
OSZ_CFG_MUSL=y
OSZ_CFG_TRAP=y
OSZ_CFG_RISCV=y
OSZ_CFG_STARTUP_STACK_SIZE=0x400

# Kernel task
OSZ_CFG_TASK=y
OSZ_CFG_SCHEDULE=y
OSZ_CFG_TASK_LIMIT=16

# Kernel interrupt
OSZ_CFG_INT_LIMIT=90
OSZ_CFG_INTERRUPT_STACK_SIZE=0x400
OSZ_CFG_EXCEPTION_STACK_SIZE=0x400

# Base driver
OSZ_CFG_UART=y

# Test
OSZ_CFG_TEST=y